{
  "name": "pulse",
  "version": "1.0.0",
  "description": "Pulse is a monitoring and management platform for Node.js applications running on PM2. Built with TanStack Start, Drizzle ORM, and PostgreSQL, it provides real-time insights into server health and process performance on your server. Designed for reliability and scalability, Pulse ensures optimal performance for applications like e-commerce platforms with features for monitoring, control, and alerting.",
  "keywords": [
    "drizzle-orm",
    "tanstack-start",
    "tanstack-query",
    "postgresql",
    "pm2",
    "pm2-node",
    "tanstack-router"
  ],
  "homepage": "https://github.com/thecodingmontana/pulse#readme",
  "bugs": {
    "url": "https://github.com/thecodingmontana/pulse/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecodingmontana/pulse.git"
  },
  "license": "MIT",
  "author": "thecodingmontana",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "prepare": "husky",
    "lint": "biome lint .",
    "lint:fix": "biome lint --fix .",
    "format": "biome format --write .",
    "check": "biome check --fix . && tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:clear": "tsx ./src/lib/db/clear.ts",
    "deps": "pnpm dlx taze@latest -Ilw",
    "deps:major": "pnpm dlx taze@latest major -Ilw",
    "ui": "pnpm dlx shadcn@latest add"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@t3-oss/env-core": "^0.13.8",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-router": "^1.132.25",
    "@tanstack/react-router-devtools": "^1.132.25",
    "@tanstack/react-router-ssr-query": "^1.132.25",
    "@tanstack/react-start": "^1.132.25",
    "@upstash/redis": "^1.35.4",
    "@vitejs/plugin-react": "^5.0.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.5",
    "lucide-react": "^0.544.0",
    "nanoid": "^5.1.6",
    "next-themes": "^0.4.6",
    "nprogress": "^0.2.0",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "postgres": "^3.4.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "vite": "^7.1.7",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.6.0",
    "@types/nprogress": "^0.2.3",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "drizzle-kit": "^0.31.5",
    "husky": "^9.1.7",
    "lefthook": "^1.13.5",
    "lint-staged": "^16.2.3",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "ultracite": "5.4.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix",
      "pnpm dlx ultracite fix"
    ]
  }
}
